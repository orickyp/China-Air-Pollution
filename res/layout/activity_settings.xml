<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity" >
	
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
        android:fitsSystemWindows="true"
        android:orientation="vertical" >
        	
        	<LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
    			 android:paddingBottom="@dimen/activity_vertical_half_margin"
                 android:orientation="vertical" >

		           <TextView
		                android:id="@+id/tCity"
			            android:layout_width="match_parent"
			            android:layout_height="match_parent"
					    android:paddingLeft="@dimen/activity_horizontal_margin"
					    android:paddingRight="@dimen/activity_horizontal_margin"
					    android:paddingBottom="@dimen/activity_vertical_half_margin"
					    android:paddingTop="@dimen/activity_vertical_half_margin"
					    android:gravity="left"
		                android:text="CITY"
		                android:textAppearance="?android:attr/textAppearanceSmall"
		                android:textStyle="bold" />
		            
		           <View
		                android:layout_width="match_parent"
				    	android:layout_height="2dip"
						android:background="@color/COLOR_GREY_DARK" />
		           
		           <LinearLayout
		                android:id="@+id/layoutbuttonCity"
	                 	android:layout_width="match_parent"
	                 	android:layout_height="wrap_content"
					    android:paddingBottom="@dimen/activity_vertical_half_margin"
					    android:paddingTop="@dimen/activity_vertical_half_margin"
	                 	android:orientation="horizontal" >
						
		               <TextView 
					        android:layout_width="wrap_content"
				            android:layout_height="match_parent"
						    android:paddingLeft="@dimen/activity_horizontal_margin"
						    android:paddingRight="@dimen/activity_horizontal_margin"
				            android:gravity="left"
					        android:drawableLeft="@drawable/ic_action_web_site"/>
		               
		                <LinearLayout 
			                android:layout_width="wrap_content"
			                android:layout_height="match_parent"
			                android:orientation="vertical"
					        android:gravity="center" > 
						    <TextView
					            android:id="@+id/tCity2"
					            android:layout_width="match_parent"
					            android:layout_height="wrap_content"
					            android:text="Cities in China"
					            android:textAppearance="?android:attr/textAppearanceMedium" />
						    
						    <TextView
					            android:id="@+id/tCityChoose"
					            android:layout_width="match_parent"
					            android:layout_height="wrap_content"
					            android:text="Default city"
					            android:textColor="@color/COLOR_GREY_DARK"
					            android:textAppearance="?android:attr/textAppearanceSmall" />

						    <Spinner
						        android:id="@+id/spinnerCity"
						        android:layout_width="match_parent"
						        android:layout_height="0dp"
						        android:entries="@array/city_arrays"
						        android:prompt="@string/city_prompt"
						        android:textColor="@color/COLOR_GREY_DARK" />

					    </LinearLayout>
					    
				</LinearLayout>
            </LinearLayout>
        
            <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
    			 android:paddingBottom="@dimen/activity_vertical_half_margin" >
		           
		            <TextView
			            android:id="@+id/tSoundActive"
			            android:layout_width="match_parent"
			            android:layout_height="match_parent"
					    android:paddingLeft="@dimen/activity_horizontal_margin"
					    android:paddingRight="@dimen/activity_horizontal_margin"
					    android:paddingBottom="@dimen/activity_vertical_half_margin"
					    android:paddingTop="@dimen/activity_vertical_half_margin"
					    android:gravity="left"
			            android:text="SOUND"
			            android:textStyle="bold"
			            android:textAppearance="?android:attr/textAppearanceSmall" />
		            
		            <View
		                android:layout_width="match_parent"
				    	android:layout_height="2dip"
						android:background="@color/COLOR_GREY_DARK" />
		            
		            <LinearLayout
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content"
	                 	
		                android:orientation="vertical" >
		                
		                <LinearLayout
			                 android:layout_width="match_parent"
			                 android:layout_height="wrap_content"
						     android:paddingBottom="@dimen/activity_vertical_half_margin"
						     android:paddingTop="@dimen/activity_vertical_half_margin"
			                 android:orientation="horizontal" >
		                 
						    <TextView 
						        android:layout_width="wrap_content"
					            android:layout_height="match_parent"
							    android:paddingLeft="@dimen/activity_horizontal_margin"
							    android:paddingRight="@dimen/activity_horizontal_margin"
					            android:gravity="left"
						        android:drawableLeft="@drawable/ic_action_volume_on" />
			                 
						    <TextView
					            android:id="@+id/tSoundActive2"
					            android:layout_width="wrap_content"
					            android:layout_height="match_parent"
					            android:gravity="center"
					            android:text="Sound active"
					            android:textAppearance="?android:attr/textAppearanceMedium" />
				            <LinearLayout 
				                android:layout_width="match_parent"
				                android:layout_height="match_parent"
				                android:paddingLeft="@dimen/activity_horizontal_margin"
							    android:paddingRight="@dimen/activity_horizontal_margin"
					            android:gravity="right" >
					            <ToggleButton
					                android:id="@+id/toggleButton1"
					                android:layout_width="wrap_content"
					                android:layout_height="match_parent"
					                android:textOn="@string/toggle_turn_on"
			        				android:textOff="@string/toggle_turn_off"
					                android:text="ToggleButton" />
				            </LinearLayout>
						</LinearLayout>		                
						
						<View
			                android:layout_width="match_parent"
					    	android:layout_height="1dip"
							android:background="@color/COLOR_GREY_DARK" />
		                
		                <LinearLayout
			                android:id="@+id/layoutbuttonSound"
		                 	android:layout_width="match_parent"
		                 	android:layout_height="wrap_content"
						    android:paddingBottom="@dimen/activity_vertical_half_margin"
						    android:paddingTop="@dimen/activity_vertical_half_margin"
		                 	android:orientation="horizontal" >
						
		               <TextView 
					        android:layout_width="wrap_content"
				            android:layout_height="match_parent"
						    android:paddingLeft="@dimen/activity_horizontal_margin"
						    android:paddingRight="@dimen/activity_horizontal_margin"
				            android:gravity="left"
					        android:drawableLeft="@drawable/ic_action_collection"/>
		               
		                <LinearLayout 
			                android:layout_width="wrap_content"
			                android:layout_height="match_parent"
			                android:orientation="vertical"
					        android:gravity="center" >
					            
					        <LinearLayout 
				                android:layout_width="match_parent"
				                android:layout_height="wrap_content"
				                android:orientation="horizontal" >
						        
							    <TextView
						            android:id="@+id/tContentSound"
						            android:layout_width="wrap_content"
						            android:layout_height="wrap_content"
						            android:text="Ringtone"
						            android:textAppearance="?android:attr/textAppearanceMedium" />
							    
							    <TextView 
							        android:id="@+id/tContentSound2"
						            android:layout_width="match_parent"
						            android:layout_height="wrap_content"
						            android:text="sdcard/Ringtones/"
						            android:textColor="@color/COLOR_WHITE"
						            android:gravity="right"
						            android:textAppearance="?android:attr/textAppearanceSmall"/>
						    
						    </LinearLayout>  
						    
						    <TextView
					            android:id="@+id/tContentSoundChoose"
					            android:layout_width="match_parent"
					            android:layout_height="wrap_content"
					            android:text="Default ringtone"
					            android:textColor="@color/COLOR_GREY_DARK"
					            android:textAppearance="?android:attr/textAppearanceSmall" />

						    <Spinner
						        android:id="@+id/spinnerContentSound"
						        android:layout_width="match_parent"
						        android:layout_height="0dp"
						        android:prompt="@string/sound_prompt"
						        android:textColor="@color/COLOR_GREY_DARK" />

					    </LinearLayout>
					    
				</LinearLayout>
				
		            </LinearLayout>
             </LinearLayout>
             
            
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
    			 android:paddingBottom="@dimen/activity_vertical_half_margin" >
		         
		         <TextView
			            android:id="@+id/tVibrateActive"
			            android:layout_width="match_parent"
			            android:layout_height="match_parent"
			            android:paddingLeft="@dimen/activity_horizontal_margin"
				    	android:paddingRight="@dimen/activity_horizontal_margin"
					    android:paddingBottom="@dimen/activity_vertical_half_margin"
					    android:paddingTop="@dimen/activity_vertical_half_margin"
				    	android:gravity="left"
			            android:text="VIBRATE"
			            android:textStyle="bold"
		            	android:textAppearance="?android:attr/textAppearanceSmall" />
		            
	            <View
		                android:layout_width="match_parent"
				    	android:layout_height="2dip"
						android:background="@color/COLOR_GREY_DARK" />
	            
	            <LinearLayout
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content"
		                android:orientation="vertical">
		                
		                <LinearLayout
			                 android:layout_width="match_parent"
			                 android:layout_height="wrap_content"
					    	 android:paddingBottom="@dimen/activity_vertical_half_margin"
					    	 android:paddingTop="@dimen/activity_vertical_half_margin"
			                 android:orientation="horizontal" >
		                 
						    <TextView 
						        android:layout_width="wrap_content"
					            android:layout_height="match_parent"
							    android:paddingLeft="@dimen/activity_horizontal_margin"
							    android:paddingRight="@dimen/activity_horizontal_margin"
					            android:gravity="left"
					            android:drawableStart="@drawable/ic_vibrate_ext_unselected" />
			                 
						    <TextView
					            android:id="@+id/tVibrateActive2"
					            android:layout_width="wrap_content"
					            android:layout_height="match_parent"
					            android:gravity="center"
					            android:text="Vibrate active"
					            android:textAppearance="?android:attr/textAppearanceMedium" />
						    
				            <LinearLayout 
				                android:layout_width="match_parent"
				                android:layout_height="match_parent"
				                android:paddingLeft="@dimen/activity_horizontal_margin"
							    android:paddingRight="@dimen/activity_horizontal_margin"
					            android:gravity="right" >
					            <ToggleButton
					                android:id="@+id/toggleButton2"
						            android:layout_width="wrap_content"
						            android:layout_height="match_parent"
						            android:textOn="@string/toggle_turn_on"
			        				android:textOff="@string/toggle_turn_off"
					                android:text="ToggleButton" />
				            </LinearLayout>
						</LinearLayout>
		                
		            </LinearLayout>
		    
		    </LinearLayout>
             
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
    			 android:paddingBottom="@dimen/activity_vertical_half_margin" >
		         <TextView
			            android:id="@+id/tNotificationCategory"
			            android:layout_width="match_parent"
			            android:layout_height="match_parent"
			            android:paddingLeft="@dimen/activity_horizontal_margin"
				    	android:paddingRight="@dimen/activity_horizontal_margin"
					    android:paddingBottom="@dimen/activity_vertical_half_margin"
					    android:paddingTop="@dimen/activity_vertical_half_margin"
				    	android:gravity="left"
			            android:text="NOTIFICATION"
			            android:textStyle="bold"
		            	android:textAppearance="?android:attr/textAppearanceSmall" />
		            
	            <View
		                android:layout_width="match_parent"
				    	android:layout_height="2dip"
						android:background="@color/COLOR_GREY_DARK" />
	            
	            <LinearLayout
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content"
		                android:orientation="vertical">
		                
		                <LinearLayout
						     android:id="@+id/layoutbuttonCategory"
			                 android:layout_width="match_parent"
			                 android:layout_height="wrap_content"
						     android:paddingBottom="@dimen/activity_vertical_half_margin"
						     android:paddingTop="@dimen/activity_vertical_half_margin"
			                 android:orientation="horizontal" >
		                 
						    <TextView 
						        android:layout_width="wrap_content"
					            android:layout_height="match_parent"
							    android:paddingLeft="@dimen/activity_horizontal_margin"
							    android:paddingRight="@dimen/activity_horizontal_margin"
					            android:gravity="left"
					            android:drawableStart="@drawable/ic_action_warning" />
			                <LinearLayout 
				                android:layout_width="wrap_content"
				                android:layout_height="match_parent"
				                android:orientation="vertical"
						        android:gravity="center" >
					            <TextView
						            android:id="@+id/tAqiLevel"
						            android:layout_width="match_parent"
						            android:layout_height="wrap_content"
						            android:text="AQI level"
						            android:textAppearance="?android:attr/textAppearanceMedium" />
							    
							    <TextView
						            android:id="@+id/tAqiLevelChoose"
						            android:layout_width="match_parent"
						            android:layout_height="wrap_content"
						            android:text="Default AQI level"
						            android:textColor="@color/COLOR_GREY_DARK"
						            android:textAppearance="?android:attr/textAppearanceSmall" />
							    
							    <Spinner
					                android:id="@+id/spinnerCategory"
						            android:layout_width="wrap_content"
						            android:layout_height="0dp"
							        android:entries="@array/category_arrays"
							        android:prompt="@string/category_prompt" />
							    
						    </LinearLayout>
						</LinearLayout>
						
						<View
			                android:layout_width="match_parent"
					    	android:layout_height="1dip"
							android:background="@color/COLOR_GREY_DARK" />
		                
						<LinearLayout
						     android:id="@+id/layoutbuttonInterval"
			                 android:layout_width="match_parent"
			                 android:layout_height="wrap_content"
						     android:paddingBottom="@dimen/activity_vertical_half_margin"
						     android:paddingTop="@dimen/activity_vertical_half_margin"
			                 android:orientation="horizontal" >
		                 	 
						    <TextView 
						        android:layout_width="wrap_content"
					            android:layout_height="match_parent"
							    android:paddingLeft="@dimen/activity_horizontal_margin"
							    android:paddingRight="@dimen/activity_horizontal_margin"
					            android:gravity="left"
					            android:drawableStart="@drawable/ic_action_time" />
						    
						    <LinearLayout 
				                android:layout_width="wrap_content"
				                android:layout_height="match_parent"
				                android:orientation="vertical"
						        android:gravity="center" >
				                <TextView
						            android:id="@+id/tInterval"
						            android:layout_width="match_parent"
						            android:layout_height="wrap_content"
						            android:text="Time interval"
						            android:textAppearance="?android:attr/textAppearanceMedium" />
							    
							    <TextView
						            android:id="@+id/tIntervalChoose"
						            android:layout_width="match_parent"
						            android:layout_height="wrap_content"
						            android:text="Default interval"
						            android:textColor="@color/COLOR_WHITE"
						            android:textAppearance="?android:attr/textAppearanceSmall" />
							    
							    <Spinner
					                android:id="@+id/spinnerInterval"
						            android:layout_width="match_parent"
						            android:layout_height="0dp"
							        android:entries="@array/interval_arrays"
							        android:prompt="@string/interval_prompt" />
						    </LinearLayout>
						 </LinearLayout>
						
		            </LinearLayout>
		    
		    </LinearLayout>

      </LinearLayout>
      </ScrollView>

</RelativeLayout>
